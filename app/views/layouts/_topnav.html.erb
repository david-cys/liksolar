<script>
  $('#graph_link').click(function(e) {
    var area = $.trim($('.dijitContentPane.result').text()).split(" ")[0];
    if (area.length !== 0) {
      e.preventDefault();
      window.location.href = '/graph_init?roof_area=' + area;
    }
  });
</script>
